apiVersion: v1
kind: Config
clusters:
- name: local
  cluster:
    certificate-authority: {{ kube_cert_dir }}/ca.pem
{% if loadbalancer_apiserver_localhost %}
    server: https://localhost:{{ nginx_kube_apiserver_port|default(kube_apiserver_port) }}
{% else %}
    server: {{ kube_apiserver_endpoint }}
{% endif %}
users:
- name: kubelet
  user:
    client-certificate: {{ kube_cert_dir }}/node-{{ inventory_hostname }}.pem
    client-key: {{ kube_cert_dir }}/node-{{ inventory_hostname }}-key.pem
contexts:
- context:
    cluster: local
    user: kubelet
  name: kubelet-{{ cluster_name }}
current-context: kubelet-{{ cluster_name }}
